<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/movies_app</item>
        <item name="colorAccent">@color/movies_app</item>
        <item name="colorControlActivated">?colorPrimary</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="tabStyle">@style/Widget.PopularMovies.Tabs</item>
        <item name="android:textColorPrimary">@color/white_90</item>
        <item name="android:textColorSecondary">@color/white_90</item>
        <item name="android:textViewStyle">@style/Widget.PopularMovies.TextView</item>
        <item name="android:windowBackground">@color/grey_800</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/status_bar</item>
        <item name="navigationViewStyle">@style/Widget.Design.NavigationView</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:textColorTertiary">@color/text_color_tertiary</item>
    </style>

    <!-- No Action Bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />

    <!-- Launcher -->
    <style name="AppTheme.LightNav" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.Launcher" parent="@style/AppTheme.LightNav">
        <item name="android:windowBackground">@drawable/preview_window</item>
    </style>

    <!-- Auth -->
    <style name="AppTheme.Movies" parent="AppTheme.LightNav">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Widgets -->

    <style name="Widget.PopularMovies" parent="@android:style/Widget" />

    <!-- Button -->
    <style name="Widget.PopularMovies.RaisedButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/highlight_button</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.PopularMovies.RaisedRiskButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/highlight_button</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TextAppearance.PopularMovies.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.PopularMovies.BorderlessButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">@dimen/padding_borderless_button</item>
        <item name="android:paddingBottom">@dimen/padding_borderless_button</item>
    </style>

    <!-- TextView for FrameLayout -->
    <style name="Widget.PopularMovies.RaisedTextView" parent="@style/TextAppearance.PopularMovies.Body">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.PopularMovies.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.PopularMovies.Body</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <!-- Progressbar -->
    <style name="Widget.PopularMovies.ProgressbarWhite" parent="@android:style/Widget.Material.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <!-- Dialog -->
    <style name="Widget.PopularMovies.Dialog">
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:elevation">@dimen/dialog_elevation</item>
    </style>

    <style name="TextAppearance.PopularMovies.DialogTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextAppearance.PopularMovies.DialogContent" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Widget.PopularMovies.DialogButtons">
        <item name="android:gravity">end</item>
    </style>

    <!-- TextViews -->
    <style name="TextAppearance.PopularMovies.H1" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.PopularMovies.H2" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">16sp</item>

        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="TextAppearance.PopularMovies.H3" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="Widget.PopularMovies.Welcome" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.PopularMovies.H2</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Gamification.ToolbarTitle</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:background">@color/status_bar</item>
    </style>

    <style name="TextAppearance.Gamification.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Tabs -->
    <style name="Widget.PopularMovies.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.PopularMovies.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="TextAppearance.PopularMovies.Tab" parent="@style/TextAppearance.MaterialComponents.Tab">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
